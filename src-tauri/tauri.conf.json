{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "YZZO",
  "version": "1.0.0",
  "identifier": "app.yzzo.yzzo",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "iconAsTemplate": false,
      "iconPath": "icons/icon.png"
    },
    "windows": [
      {
        "label": "main",
        "title": "YZZO - Clipboard Manager",
        "width": 320,
        "height": 560,
        "visible": false,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "./template.desktop"
      },
      "rpm": {
        "desktopTemplate": "./template.desktop"
      }
    }
  },
  "plugins": {
    "clipboard": {
      "enable": true
    }
  }
}
